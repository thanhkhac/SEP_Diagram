@startuml

'=====================DEFINE========================

'=====================IMPORT========================
!include ../../GlobalSettings.puml
!include ../../common/Mediatr.puml
!include ../../common/EndpointClasses.puml
!include ../../common/IApplicationDbContext.puml
!include ../../common/service/IUser.puml
'=====================COMMAND========================
class UpdatePositionDto {
    + Position : string
    + UserId : Guid
}

class UpdatePositionCommand {
    + ClassId : Guid?
    + UserId : Guid?
    + Position : string?
}

class UpdatePositionCommandHandler {
    -  _context : IApplicationDbContext
    -  _user : IUser
    + UpdatePositionCommandHandler(context:IApplicationDbContext, user:IUser)
    +  Handle(request:UpdatePositionCommand, cancellationToken:CancellationToken) : Task<UpdatePositionDto>
}

'=====================ENDPOINT========================
class ClassEndpoints  {
    +  UpdatePosition(classId:Guid, userId:Guid, rq:UpdatePositionCommand, sender:ISender) : Task<Ok<ApiResponse<UpdatePositionDto>>>
}
'=====================RELATIONSHIP========================
!include zCommon.puml
UpdatePositionCommand ..|> IRequest : <<implements>>
UpdatePositionCommandHandler ..> UpdatePositionCommand :  <<uses>>
ClassEndpoints ..> UpdatePositionCommand : <<uses>>
UpdatePositionCommandHandler ..|> IRequestHandler : <<implements>>
UpdatePositionCommandHandler ..> UpdatePositionDto : <<uses>>

'=====INJECT
UpdatePositionCommandHandler ..> IApplicationDbContext : <<inject>>
UpdatePositionCommandHandler ..> IUser : <<inject>>
'=====INJECT
@enduml